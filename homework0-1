1	public class TriangleDrawer{
2	   public static void drawTriangle(int N){
3	      int col = 0;
4	      int row = 0;
5	      
6	     for(row = 0;row < N;row++)
7	     { for(col = 0;col <=row; col++)
8	       {
9	        System.out.print("*");
10	        }
11	        System.out.println(" ");
12	      }
13	      
14	   }
15	   
16	   public static void main(String[] args) {
17	      TriangleDrawer td = new TriangleDrawer();
18	      td.drawTriangle(5);
19	   }
20	}
